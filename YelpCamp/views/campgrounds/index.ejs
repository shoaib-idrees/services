<%- include("../partials/header") %>

             
<div class="container">
    <header class="jumbotron"> 
        <div class="container">
            <h1>Welcome to Camping Sites</h1>
             <p> View our hand-picked campgrounds from all over the world</p>

             <p><a class ="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campgrounds</a></p>
        </div>
    </header>

    <div class="row text-center"  style="display:flex; flex-wrap: wrap;">

           <%campgrounds.forEach(function(ground){%>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
	           <img src="<%= ground.image %>">
	           <div class="caption">
	           <h4> <%=ground.name%></h4>
	           </div>
               <p> 
               <a href="/campgrounds/<%= ground._id %> " class= " btn btn-primary">More info</a>
               </p>
            </div>            
        </div>
           <%});%>

    </div>


</div>

<%- include("../partials/footer") %>

